@page
@model LaptopShowModel
@{
    ViewData["Title"] = "LaptopShow";
}

@if(Model.LaptopsTable.Count == 0)
{
    <div class="alert alert-info" role="alert">No laptops found!</div>
}
else
{
    <table class="table table-striped">
        <thead class="thead-dark">
            <tr>
                <th scope="col">ID</th>
                <th scope="col">State</th>
                <th scope="col">Model</th>
                <th scope="col">Producer</th>
            </tr>
        </thead>
        @foreach(var laptop in Model.LaptopsTable)
        {
            <tr>
                <td><a href = '@string.Format("LaptopDetails/?ID={0}", laptop.ID)'>@laptop.ID</a></td>
                <td><a href = '@string.Format("LaptopDetails/?ID={0}", laptop.ID)'>@laptop.State</td>
                <td><a href = '@string.Format("LaptopDetails/?ID={0}", laptop.ID)'>@laptop.Model</td>
                <td><a href = '@string.Format("LaptopDetails/?ID={0}", laptop.ID)'>@laptop.Producer</td>
            </tr>

        }
    </table>
}